<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglu_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_qitafangshi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/denglu_icon_bottom"
        android:layout_marginTop="@dimen/denglu_icon_top"
        android:scaleType="centerInside"
        android:src="@drawable/login_logo"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_shoujifangshi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/denglu_icon_bottom"
        android:layout_marginTop="@dimen/denglu_icon_top"
        android:scaleType="centerInside"
        android:src="@drawable/login_logo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_shoujifangshi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/wuzhen_login_shurukuang"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="+"
                android:textColor="@color/text_details"
                android:textSize="16dp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/edit_quhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:numeric="integer"
                android:singleLine="true"
                android:text="86"
                android:textColor="@color/text_details"
                android:textSize="16dp"
                android:typeface="sans" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/black" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="输入手机号登陆"
                android:numeric="integer"
                android:singleLine="true"
                android:textColor="@color/text_details"
                android:textSize="16dp"
                android:typeface="sans" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp" >

            <Button
                android:id="@+id/button_fasongyanzhengma"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/wuzhen_login_telephone_code"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="发送验证码"
                android:textColor="@color/yanzhengma"
                android:textSize="16dp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/yanzhengmaedittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/button_fasongyanzhengma"
                android:background="@drawable/wuzhen_login_telephone_code1"
                android:ellipsize="end"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:padding="12dp"
                android:singleLine="true"
                android:textColor="@color/text_details"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/but_shoujihaodenglu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/login_button_color"
            android:text="登   录"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/text_qiehuanweiqita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="—其他方式登陆—"
            android:textColor="@color/text_title"
            android:textSize="16dp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_qitafangshi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/wuzhen_login_shurukuang"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wuzhen_user_name" />

            <TextView
                android:id="@+id/yonghumingtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="用户名："
                android:textColor="@color/text_title"
                android:textSize="16dp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:singleLine="true"
                android:textColor="@color/text_details"
                android:textSize="16dp"
                android:typeface="sans" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/wuzhen_login_shurukuang"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/wuzhen_password" />

                <TextView
                    android:id="@+id/text_mima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="密    码："
                    android:textColor="@color/text_title"
                    android:textSize="16dp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/edit_shurumima"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/text_details"
                    android:textSize="16dp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/but_qitafangshidenglu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/login_button_color"
            android:text="登   录"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/text_qiehuanshouji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="— 切换为手机登录 —"
            android:textColor="@color/text_title"
            android:textSize="16dp"
            android:visibility="gone"
            android:typeface="sans" />
        <TextView
            android:id="@+id/denglu_btv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="扫一扫"
            android:textColor="@color/text_title"
            android:textSize="16dp"
            android:typeface="sans" />
       
    </LinearLayout>

</RelativeLayout>