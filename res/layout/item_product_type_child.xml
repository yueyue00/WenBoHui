<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pchi_item_height"
    android:background="@color/app_backgroud" >

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_row"
            style="@style/wrap_All"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/right" />

        <TextView
            android:id="@+id/tv"
            style="@style/wrap_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/iv_row"
            android:padding="@dimen/padding"
            android:textColor="@color/text_title"
            android:textSize="@dimen/content_font_size_middle"
            android:typeface="sans" />

        <TextView
            android:id="@+id/tv_new2"
            style="@style/wrap_All"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_row"
            android:textColor="@color/common_red_font"
            android:textSize="@dimen/content_font_size_middle"
            android:typeface="sans"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/agray" />

</RelativeLayout>