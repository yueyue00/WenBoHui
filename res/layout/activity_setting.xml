<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/genbuju"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/xiaoguo_title2_bg" >

        <RelativeLayout
            android:id="@+id/titlelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/app_title_normal" >

            <ImageButton
                android:id="@+id/goback"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/wuzhen_back" />

            <TextView
                android:id="@+id/titletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="19dp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:fadeScrollbars="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/userinfolayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/huiyixiangqing_topiv"
                android:background="@drawable/bg_setting" >

                <com.gheng.exhibit.widget.CircleImageView
                    android:id="@+id/userphoto"
                    android:layout_width="@dimen/setting_icon_size"
                    android:layout_height="@dimen/setting_icon_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_launcher"
                    app:zborder_color="@color/beijing"
                    app:zborder_width="2dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userphoto"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="19dp"
                    android:typeface="sans" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_marginTop="5dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/userdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text=""
                        android:textColor="@color/text_title"
                        android:textSize="16dp"
                        android:typeface="sans" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/updateapklayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/userinfolayout" >

                <TextView
                    android:id="@+id/checkapkversiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/go1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wuzhen_vipnextpage" />

                <TextView
                    android:id="@+id/apkversioncodetv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/go1"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:text="V1.0"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#EEEDF2" />
            </RelativeLayout>

            <!-- 联系我们 -->

            <RelativeLayout
                android:id="@+id/connectuslayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/updateapklayout"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/connectustv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/go2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wuzhen_vipnextpage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#EEEDF2" />
            </RelativeLayout>
            <!-- 关于我们 -->

            <RelativeLayout
                android:id="@+id/aboutuslayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/connectuslayout"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/aboutustv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/go3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wuzhen_vipnextpage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#EEEDF2" />
            </RelativeLayout>
            <!-- 二维码 -->

            <RelativeLayout
                android:id="@+id/erweimalayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/aboutuslayout"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/erweimatv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/go4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wuzhen_vipnextpage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#EEEDF2" />
            </RelativeLayout>
            <!-- 修改密码 -->

            <RelativeLayout
                android:id="@+id/xiugaimimalayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/erweimalayout"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/xiugaimimatv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_title"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/go5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wuzhen_vipnextpage" />
            </RelativeLayout>

            <!-- 注销 -->

            <RelativeLayout
                android:id="@+id/signoutlayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/xiugaimimalayout"
                android:background="#EEEDF2"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/signouttv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="17dp"
                    android:typeface="sans" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>