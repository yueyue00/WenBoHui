<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ced_list_linear"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#eeeff2"
     >

   <LinearLayout
        android:id="@+id/cedl_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/xiaoguo_title2_bg" 
        android:orientation="vertical"
        >
       
        <!-- <View 
           android:id="@+id/cedl_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            ></View>  -->
       
        <RelativeLayout
            android:id="@+id/cedl_titlelayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
             >
<!-- android:layout_marginTop="25dp" -->
            <ImageButton
                android:id="@+id/cedl_goback"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/wuzhen_back" 
                />

            <TextView
                android:id="@+id/cedl_titletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="19dp"
                 />
            <ImageButton
                android:id="@+id/cedl_sliptopic"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/btn_exhibition_map" 
                 
                />
        </RelativeLayout>
    </LinearLayout>
<ListView 
    android:id="@+id/cedl_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:divider="#00000000"
    >
    
</ListView>
<TextView 
    android:id="@+id/cedl_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="暂无数据"
    android:textColor="@color/xiaoguo_title2_bg"
    android:gravity="center"
    android:textSize="20sp"
    />
</LinearLayout>
