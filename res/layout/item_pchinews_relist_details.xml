<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/attention_list_iv"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/fav2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/attention_list_iv"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/attention_tv"
            style="@style/wrap_All"
            android:layout_marginLeft="10dp"
            android:text="移动互联网融入大众生活"
            android:textColor="@color/text_title"
            android:textSize="16dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/attention_time"
            style="@style/wrap_All"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:text="移动互联网浪潮持续发热，大众生活中移动互联网的身影无处不在移动互联网浪潮持续发热，大众生活中移动互联网的身影无处不在移动互联网浪潮持续发热，大众生活中移动互联网的身影无处不在移动互联网浪潮持续发热，大众生活中移动互联网的身影无处不在移动互联网浪潮持续发热，大众生活中移动互联网的身影无处不在"
            android:textColor="@color/text_details"
            android:textSize="13dp"
            android:typeface="sans" />
    </LinearLayout>

</RelativeLayout>