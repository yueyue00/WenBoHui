<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.gheng.exhibit.widget.TitleBar
        xmlns:titleBar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        titleBar:leftImageSrc="@drawable/back"
        titleBar:leftLineShow="false"
        titleBar:textSize="@dimen/title_font_size" >

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/common_red_font"
            android:textSize="@dimen/content_font_size" />
    </com.gheng.exhibit.widget.TitleBar>
    
     <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:padding="10dp"
    	android:gravity="center"
    	 >
    	  <TextView
	          android:id="@+id/tv_name"
	          style="@style/wrap_All"
	          android:text=""
	          android:textColor="@color/main_schedule_font"
	          android:textSize="@dimen/content_font_size_big" />
    </LinearLayout>
  
 	<View
		    android:layout_width="match_parent"
		    android:layout_height="10dp" 
		    android:background="@color/agray"/>
    <EditText
        android:id="@+id/edt_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:lines="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_tip"
            style="@style/wrap_width"
            android:text="" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:rating="0"
            android:stepSize="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:text=""
        android:textSize="16sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/ck_showname"
        style="@style/wrap_All"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:checked="false" />

</LinearLayout>