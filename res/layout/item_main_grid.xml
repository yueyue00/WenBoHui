<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/home_gv_top"
    android:paddingTop="@dimen/home_gv_top" >

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/home_gv_item"
        android:layout_height="@dimen/home_gv_item"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home_gv_comment" />

    <TextView
        android:id="@+id/tv"
        style="@style/wrap_All"
        android:layout_marginTop="5dp"
        android:gravity="top|center_horizontal"
        android:lines="2"
        android:text="大会日程"
        android:textColor="@color/home_gvcolor"
        android:textSize="@dimen/content_font_size_middle"
        android:typeface="sans" />

</LinearLayout>