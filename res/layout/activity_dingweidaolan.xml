<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA" >

    <RelativeLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4074C3" >

        <ImageButton
            android:id="@+id/goback"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/wuzhen_back" />

        <TextView
            android:id="@+id/titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/searchbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/wuzhen_search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:fadeScrollbars="true" >

        <RelativeLayout
            android:id="@+id/chosebeginpointbuttonlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/chosebeginpointtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:text=""
                android:textColor="#1a1a1a"
                android:textSize="16dp"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/beginlogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/wuzhen_start" />

            <TextView
                android:id="@+id/startpointname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/beginlogo"
                android:layout_toRightOf="@+id/chosebeginpointtv"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="#1a1a1a"
                android:textSize="16dp"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choseendpointbuttonlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/chosebeginpointbuttonlayout"
            android:layout_marginTop="5dp"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/choseendpointtv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:lines="1"
                android:text=""
                android:textColor="#1a1a1a"
                android:textSize="16dp"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/endlogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/wuzhen_end" />

            <TextView
                android:id="@+id/endpointname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/endlogo"
                android:layout_toRightOf="@+id/choseendpointtv"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="#1a1a1a"
                android:textSize="16dp"
                android:typeface="sans" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/begindaohanglayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/choseendpointbuttonlayout"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/begindaohangbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/imageselectorforkaishidaohangbutton"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="开始导航"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:typeface="sans" />

            <Button
                android:id="@+id/resetmapbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/imageselectorforkaishidaohangbutton"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="重新选择"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:typeface="sans" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mapviewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonlayout"
        android:layout_below="@+id/titlelayout" >

        <com.gheng.indoormap.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/showfloorslayout"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@color/black" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chosefloorrv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/maptishibutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/openmaptishipopbutton" />
    </RelativeLayout>

</RelativeLayout>