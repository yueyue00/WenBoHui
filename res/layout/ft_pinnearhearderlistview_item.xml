<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ft_item_header_parent"
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:background="#ffdedede"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ft_item_header_text"
            android:layout_width="40dip"
            android:layout_height="15dip"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/ft_pin_item_iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/a_huiyiricheng_guesticon" />

        <TextView
            android:id="@+id/ft_pin_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ft_pin_item_iv_icon"
            android:text="张华"
            android:textColor="#99000000"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/ft_pin_item_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/mytask_checkbox_selector"
            android:button="@null"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/ft_pin_item_iv_icon"
            android:background="#20000000" />
    </RelativeLayout>

</LinearLayout>