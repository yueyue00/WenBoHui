<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <com.gheng.exhibit.widget.CircleImageView
        android:id="@+id/vipinfo_icon"
        android:layout_width="@dimen/setting_icon_size"
        android:layout_height="@dimen/setting_icon_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/a_huiyiricheng_guesticon"
        app:zborder_color="@color/beijing"
        app:zborder_width="2dp" />

    <LinearLayout
        android:id="@+id/vipinfo_lin"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/vipinfo_icon"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/vipinfo_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李彪"
            android:textColor="@color/left_txt"
            android:textSize="20sp" />

        <View
            android:layout_width="30dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/cultural_location_color" />

        <TextView
            android:id="@+id/vipinfo_tv_workplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="北京慧点科技有限公司"
            android:textColor="@color/right_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vipinfo_tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目总监"
            android:textColor="@color/right_color"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>