<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:layout_margin="5dp"
   
    >
    <ImageView 
        android:id="@+id/driver_task_ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a_huiyiricheng_guesticon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    
    <LinearLayout 
        android:id="@+id/linea_nameAndjob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/driver_task_ivIcon"
        android:layout_marginTop="7dp"
        >
      <TextView 
    android:id="@+id/driver_task_tvName"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="成龙成龙"
    android:gravity="center"
    android:paddingLeft="7dp"
    android:textColor="#000000"
    android:textSize="15sp"
    />  
    <TextView 
    android:id="@+id/driver_task_tvJob"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="副局长"
    android:gravity="center"
    android:layout_marginLeft="7dp"
    android:textColor="#aaaaaa"
    /> 
 
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/linear_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/driver_task_ivIcon"
        android:layout_below="@id/linea_nameAndjob"
        android:layout_marginTop="5dp"
        >
      <TextView 
    android:id="@+id/driver_task_tvPhoneNum"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="18634578903"
    android:gravity="center_vertical"
    android:paddingLeft="7dp"
    android:textColor="@color/xiaoguo_title2_bg"
    android:textSize="18sp"
    />  
    <ImageView 
        android:id="@+id/driver_task_ivCall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mytask_call"
        android:layout_marginLeft="15dp"
        />
     <ImageView 
        android:id="@+id/driver_task_ivSendInfo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/sendinfo"
        android:layout_marginLeft="15dp"
        />
    </LinearLayout>
    
    


