<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/attention_list_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/wuzhen_attention_yes" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/attention_list_iv"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/attention_tv"
            style="@style/wrap_All"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="通过浙江看中国信息化发展"
            android:textColor="@color/text_title"
            android:textSize="16dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/attention_date"
            style="@style/wrap_All"
            android:layout_below="@+id/attention_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="8月23日"
            android:textColor="@color/text_details"
            android:textSize="13dp"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>